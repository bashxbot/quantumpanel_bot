modules = ["python-3.11"]

[nix]
channel = "stable-24_11"
packages = ["freetype", "jq", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "postgresql", "redis", "tcl", "tk", "zlib"]

[env]
# Remove Mastra-specific variable â€“ unused for bot
# MASTRA_HIDE_CLOUD_CTA = "true"

[deployment]
# Just run your Python bot
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

# Keep only one port if your bot needs webhook later
[[ports]]
localPort = 5000
externalPort = 80
exposeLocalhost = true

# Remove unused ports, they were for Mastra Node apps
